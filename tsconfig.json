{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist/",
    "rootDirs": [
      "src"
    ],
    "lib": [
      "es6",
      "dom",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ]
}